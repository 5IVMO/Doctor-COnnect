                <!--android:layout_marginTop="@dimen/ic_album_overflow_margin_top"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:src="@drawable/dots" />-->

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>