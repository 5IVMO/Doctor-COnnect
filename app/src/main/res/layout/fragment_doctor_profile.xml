            android:gravity="center"
            android:layout_margin="15dp"
            android:padding="15dp"
            >

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Save"
                android:id="@+id/save"
                android:paddingLeft="5dp"
