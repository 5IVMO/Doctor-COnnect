        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relative_body"
            android:layout_marginTop="20dp"
            android:id="@+id/relative_body2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/add_spec"
                android:autoLink="all"
                android:gravity="center"
                android:textSize="17dp"
                android:id="@+id/add_spec"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/add_hosp"
                android:layout_below="@id/add_spec"
                android:autoLink="all"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="17dp"
                android:id="@+id/add_hsptl"
                />


        </RelativeLayout>

