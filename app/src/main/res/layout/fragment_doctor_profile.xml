                android:text="Location"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:id="@+id/doc_loc_txt"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doc_dob"
                android:layout_alignStart="@id/doc_dob"
                android:layout_alignLeft="@id/doc_dob"
                android:hint="Karachi"
                android:layout_alignBaseline="@id/doc_loc_txt"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:id="@+id/doc_loc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/doc_loc_txt"
                android:text="NIC"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:id="@+id/doc_nic_txt"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doc_dob"
                android:layout_alignStart="@id/doc_dob"
                android:layout_alignLeft="@id/doc_dob"
                android:hint="4220126277857"
                android:maxLength="13"
                android:layout_alignBaseline="@id/doc_nic_txt"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:id="@+id/doc_nic"/>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doc_dob"
                android:layout_alignStart="@id/doc_dob"
                android:layout_alignLeft="@id/doc_dob"
                android:hint="Agha Khan Hospital"
                android:layout_alignBaseline="@+id/doc_hsptal_txt"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
