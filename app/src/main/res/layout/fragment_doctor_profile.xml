            android:layout_height="match_parent"
            android:paddingTop="30dp"
            android:layout_below="@+id/linear"
            android:gravity="center_horizontal"
            android:id="@+id/relative_body"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:paddingTop="20dp"
                android:id="@+id/form1_signUp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/doctor_img"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:src="@drawable/profile"
                    app:border_color="#FF000000"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"/>

                <EditText android:id="@+id/doc_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:hint="First Name"
                    />

                <EditText android:id="@+id/doc_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:hint="Last Name" />

                <EditText android:id="@+id/doc_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:hint="Email" />

                <EditText android:id="@+id/doc_contct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:hint="Contact No." />

                <EditText android:id="@+id/doc_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:hint="Date of Birth" />


                <EditText android:id="@+id/doc_loc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:hint="Location" />

                <EditText android:id="@+id/doc_nic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:hint="NIC No." />

                <EditText android:id="@+id/doc_hsptl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:hint="Hospital" />


                <EditText android:id="@+id/doc_spec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:hint="Specialization"
                    android:visibility="gone"/>

                <EditText android:id="@+id/editText_Phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:hint="Phone No"
                    android:inputType="number" />

                <EditText android:id="@+id/editText_City"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:hint="City" />

                <EditText android:id="@+id/editText_Country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:hint="Country" />

                <EditText android:id="@+id/editText_PassWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:hint="PassWord"
                    android:inputType="textPassword" />
            </LinearLayout>
