<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:paddingTop="30dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16dp"
            android:id="@+id/pat_email_text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pat_email_text"
            android:layout_alignBaseline="@id/pat_email_text"
            android:text="abc@gmail.com"
            android:id="@+id/pat_email"
            android:textSize="17dp"
            android:layout_marginLeft="55dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pat_email_text"
            android:text="Contact"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:id="@+id/pat_contct_txt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pat_contct_txt"
            android:layout_alignBaseline="@id/pat_contct_txt"
            android:text="0312222222"
            android:textSize="17dp"
            android:id="@+id/pat_contct"
            android:layout_marginTop="10dp"
            android:layout_below="@id/pat_email_text"
            android:layout_alignStart="@id/pat_email"
            android:layout_alignLeft="@id/pat_email"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pat_contct_txt"
            android:text="Blood Group"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:id="@+id/pat_bloodgrp_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/pat_email"
            android:layout_alignLeft="@id/pat_email"
            android:layout_marginTop="10dp"
            android:layout_alignBaseline="@id/pat_bloodgrp_text"
            android:layout_below="@id/pat_contct_txt"
            android:id="@+id/pat_bloodgrp"
            android:text="B+"
            android:textSize="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pat_bloodgrp_text"
            android:text="Location"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:id="@+id/pat_loc_txt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pat_bloodgrp"
            android:layout_alignStart="@id/pat_bloodgrp"
            android:layout_alignLeft="@id/pat_bloodgrp"
            android:text="Karachi"
            android:layout_alignBaseline="@id/pat_loc_txt"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:id="@+id/pat_loc"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/header"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile"
            android:id="@+id/patient_image"
            android:background="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Patient Name"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="10dp"


            />
    </LinearLayout>

</RelativeLayout>